<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="mapper.BoardMapper">
  <insert id="writeBoard" parameterType="BoardVO">
  	insert into tbl_board (mem_id,b_title,b_file,b_content,b_write_dt) values
  	(#{id},#{title},#{filename},#{content},sysdate)
  </insert>
  <select id="allBoard" resultType="BoardVO">
  select * from tbl_board order by b_idx
  </select>
  <select id="detailBoard" resultType="BoardVO">
  select * from tbl_board where b_idx=#{num}
  </select>
  </mapper>